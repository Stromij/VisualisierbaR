<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:id="elementDetails" xmlns:fx="http://javafx.com/fxml/1" hgap="5.0">

  <Label text="%coordinate" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
  <Label fx:id="coordinates" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

  <Label text="%type" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  <Label fx:id="typeValue" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <Label text="%state" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
  <Label fx:id="stateValue" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

  <Button fx:id="breakButton" text="%break_now" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

  <padding>
    <Insets left="10.0" right="10.0"/>
  </padding>
</GridPane>